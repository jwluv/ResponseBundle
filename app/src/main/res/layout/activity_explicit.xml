<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExplicitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explicit Intent"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewSinglename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textViewSinglename" />

        <TextView
            android:id="@+id/textViewBundlename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textViewBundlename" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/app_icon_size" />

        <EditText
            android:id="@+id/editTextResultvalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/editTextResultvalue"
            android:inputType="textPersonName"
            android:textAlignment="center" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>